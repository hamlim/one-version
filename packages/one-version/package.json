{
	"name": "one-version",
	"version": "0.0.1",
	"description": "A strict dependency conformance tool for (mono)repos!",
	"bin": {
		"one-version": "./bin/index.mjs"
	},
	"type": "module",
	"devDependencies": {
		"@biomejs/biome": "1.6.3",
		"typescript": "5.4.5"
	},
	"dependencies": {
		"fast-glob": "3.3.2"
	},
	"scripts": {
		"type-check": "tsc -p ./tsconfig.json",
		"lint": "biome lint ./",
		"test": "node --test",
		"prepub": "bun run type-check && bun run lint && bun run test",
		"pub": "npm publish --access public"
	}
}
